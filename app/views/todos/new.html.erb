<h2>New To-Do</h2>

<% if @current_user %>
    <%= form_with :model => @todo do |form| %>
        <div class="mb-3">
        <%= form.label "description", :class => "form-label" %>
        <%= form.text_field "description", :class => "form-control" %>
        </div>

        <div class="mb-3">
        <%= form.label "Due Date", :class => "form-label" %>
        <%= form.date_field "duedate", :class => "form-control" %>
        </div>

    <%= form.submit "Create To-Do", :class => "btn btn-primary" %>
<% end %>
<% else %>
    You must first <a href="/login">login</a> to create a To-Do.
<% end %>